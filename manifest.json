{
  "manifest_version": 2,
  "name": "Website Blocker",
  "version": "1.0",
  "description": "A simple website blocker for Microsoft Edge",
  "icons": {},
  "permissions": ["storage", "webRequest", "webRequestBlocking", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "options.html"
  }
}
